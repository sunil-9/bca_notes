{
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@site/*": ["./*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["src/**/*", "docusaurus.config.ts", "sidebars.ts"],
  "exclude": ["node_modules", "build", "dist"]
} 